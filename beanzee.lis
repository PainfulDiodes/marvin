asm/UM245R.asm:
     1                          ; It is assumed that UM245R status signals are gated to the data bus as an IO port where:
     2                          ; /TXE = bit 0
     3                          ; /RXF = bit 1
     4                          ; As per:
     5                          ; https://github.com/PainfulDiodes/z80-breadboard-computer
     6                          ;
     7                          ; line endings are translated:
     8                          ; incoming line endings from the terminal are expected to be \r
     9                          ; and are tranlslated to \n
    10                          ; (\r\n would count as 2 line endings)
    11                          ; and outgoing line endings are sent as \r\n
    12                          ; externally this is consistent with VT100/ANSI terminal behaviour
    13                          ; and internally line endings are always \n
    14                          
    15  0076  0000000000000000  ALIGN 0x10
              0000              
    16                          
    17                          ; get character and return in A
    18                          usb_readchar:
    19                              ; get the USB status
    20  0080  db00                  in a,(UM245R_CTRL)
    21                              ; data to read? (active low)
    22  0082  cb4f                  bit 1,a
    23                              ; no, the buffer is empty
    24  0084  2008                  jr nz,_usb_no_char
    25                              ; yes, read the received char
    26  0086  db01                  in a,(UM245R_DATA)
    27                              ; is CR?
    28  0088  fe0d                  cp ESC_R
    29                              ; no:
    30  008a  c0                    ret nz
    31                              ; yes: convert CR to LF
    32  008b  3e0a                  ld a, ESC_N
    33  008d  c9                    ret
    34                          _usb_no_char:
    35  008e  3e00                  ld a,0
    36  0090  c9                    ret
    37                          
    38  0091  0000000000000000  ALIGN 0x10
              00000000000000    
    39                          
    40                          usb_putchar:
    41                              ; newline?
    42  00a0  fe0a                  cp ESC_N
    43                              ; no: just send the char
    44  00a2  2007                  jr nz,_do_usb_put
    45  00a4  3e0d                  ld a, ESC_R
    46  00a6  cdaf00                call _usb_put
    47  00a9  3e0a                  ld a, ESC_N
    48                          _do_usb_put:
    49  00ab  cdaf00                call _usb_put
    50  00ae  c9                    ret
    51                          
    52                          ; transmit character in A
    53                          _usb_put:
    54  00af  c5                    push bc
    55                              ; stash the transmit character
    56  00b0  47                    ld b,a
    57                          _usb_put_loop:
    58                              ; get the USB status
    59  00b1  db00                  in a,(UM245R_CTRL)
    60                              ; ready to transmit? (active low)
    61  00b3  cb47                  bit 0,a
    62                              ; no: bit is high
    63  00b5  20fa                  jr nz,_usb_put_loop
    64                              ; yes: restore the stashed transmit character
    65  00b7  78                    ld a,b
    66                              ; transmit the character
    67  00b8  d301                  out (UM245R_DATA),a
    68  00ba  c1                    pop bc
    69  00bb  c9                    ret
    70                          
