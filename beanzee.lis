     2                          ; *  Marvin - a Z80 homebrew monitor program
     3                          ; * (c) Stephen Willcock 2024
     4                          ; * https://github.com/PainfulDiodes
     5                          ; ****************************************************
     6                          
     7                          ; MAIN PROGRAM LOOP
     8                          
     9  00bc  00000000          ALIGN 0x10
    10                          
    11                          START:
    12                              ; point DE to zero - this is the default address argument for commands
    13  00c0  110000                ld de,0x0000
    14                          
    15  00c3  215004                ld hl,welcome_msg
    16  00c6  cd6000                call puts
    17                          
    18  00c9  00000000000000    ALIGN 0x10
    19                          
    20                          PROMPT:
    21                              ; point HL to the beginning of the input buffer
    22  00d0  2120f0                ld hl,CMD_BUFFER
    23  00d3  3e3e                  ld a,'>'
    24  00d5  cd4000                call putchar
    25                          
    26                          _get_cmd:
    27                              ; get character from console
    28  00d8  cd1000                call getchar
    29                              ; echo the character to console
    30  00db  cd4000                call putchar
    31                              ; is CR?
    32  00de  fe0d                  cp ESC_R
    33                              ; yes: skip this
    34  00e0  28f6                  jr z,_get_cmd
    35                              ; is tab?
    36  00e2  fe09                  cp ESC_T
    37                              ; yes: skip this
    38  00e4  28f2                  jr z,_get_cmd
    39                              ; is space?
    40  00e6  fe20                  cp ' '
    41                              ; yes - skip this
    42  00e8  28ee                  jr z,_get_cmd
    43                              ; escape?
    44  00ea  fe1b                  cp ESC_E
    45                              ; yes
    46  00ec  2808                  jr z, _get_cmd_esc
    47                              ; end of line?
    48  00ee  fe0a                  cp ESC_N
    49                              ; yes
    50  00f0  280b                  jr z, _get_cmd_end
    51                              ; no: add character to the buffer
    52  00f2  77                    ld(hl),a
    53                              ; move pointer to next buffer location - we're not checking for overrun
    54  00f3  23                    inc hl
    55                              ; next character
    56  00f4  18e2                  jr _get_cmd
    57                              ; do escape
    58                          _get_cmd_esc:
    59                              ; new line
    60  00f6  3e0a                  ld a,ESC_N
    61  00f8  cd4000                call putchar
    62                              ; back to prompt
    63  00fb  18d3                  jr PROMPT
    64                          _get_cmd_end:
    65                              ; string terminator
    66  00fd  3e00                  ld a,0
    67                              ; add terminator to end of buffer
    68  00ff  77                    ld(hl),a
    69                          ; process command from buffer
    70                              ; point to start of buffer
    71  0100  2120f0                ld hl,CMD_BUFFER
    72                              ; load character from buffer
    73  0103  7e                    ld a,(hl)
    74                              ; end of string?
    75  0104  fe00                  cp 0
    76                              ; yes - empty line - go back to prompt
    77  0106  28c8                  jr z,PROMPT
    78                              ; advance the buffer pointer
    79  0108  23                    inc hl
    80  0109  fe72                  cp 'r'
    81  010b  2815                  jr z,_cmd_read
    82  010d  fe77                  cp 'w'
    83  010f  2847                  jr z,_cmd_write
    84  0111  fe78                  cp 'x'
    85  0113  2868                  jr z,_cmd_execute
    86                              ; ':' = load from intel hex format
