    91  011c  cd6000                call puts
    92                              ; loop back to the prompt
    93  011f  c3d000                jp PROMPT
    94                          
    95                          ; COMMANDS
    96                          
    97                          ; READ
    98                          ; read bytes from memory and send hex values to console
    99                          _cmd_read:
   100                              ; load character from buffer
   101  0122  7e                    ld a,(hl)
   102                              ; end of string?
