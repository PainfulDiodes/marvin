asm/marvin.asm:
     1                          ; ****************************************************
     2                          ; *  Marvin - a Z80 homebrew monitor program
     3                          ; * (c) Stephen Willcock 2024
     4                          ; * https://github.com/PainfulDiodes
     5                          ; ****************************************************
     6                          
     7                          ; MAIN PROGRAM LOOP
     8                          
     9  00df  00                ALIGN 0x10
    10                          
    11                          START:
    12                              ; point DE to zero - this is the default address argument for commands
    13  00e0  110000                ld de,0x0000
    14                          
    15  00e3  218004                ld hl,welcome_msg
    16  00e6  cd6000                call puts
    17                          
    18  00e9  00000000000000    ALIGN 0x10
    19                          
    20                          PROMPT:
    21                              ; point HL to the beginning of the input buffer
    22  00f0  2120f0                ld hl,CMD_BUFFER
    23  00f3  3e3e                  ld a,'>'
    24  00f5  cd4000                call putchar
    25                          
    26                          _get_cmd:
    27                              ; get character from console
    28  00f8  cd1000                call getchar
    29                              ; echo the character to console
    30  00fb  cd4000                call putchar
    31                              ; is CR?
    32  00fe  fe0d                  cp ESC_R
    33                              ; yes: skip this
    34  0100  28f6                  jr z,_get_cmd
    35                              ; is tab?
    36  0102  fe09                  cp ESC_T
    37                              ; yes: skip this
    38  0104  28f2                  jr z,_get_cmd
    39                              ; is space?
    40  0106  fe20                  cp ' '
    41                              ; yes - skip this
    42  0108  28ee                  jr z,_get_cmd
    43                              ; escape?
    44  010a  fe1b                  cp ESC_E
    45                              ; yes
    46  010c  2808                  jr z, _get_cmd_esc
    47                              ; end of line?
    48  010e  fe0a                  cp ESC_N
    49                              ; yes
    50  0110  280b                  jr z, _get_cmd_end
    51                              ; no: add character to the buffer
    52  0112  77                    ld(hl),a
    53                              ; move pointer to next buffer location - we're not checking for overrun
    54  0113  23                    inc hl
    55                              ; next character
    56  0114  18e2                  jr _get_cmd
    57                              ; do escape
    58                          _get_cmd_esc:
    59                              ; new line
    60  0116  3e0a                  ld a,ESC_N
    61  0118  cd4000                call putchar
    62                              ; back to prompt
    63  011b  18d3                  jr PROMPT
    64                          _get_cmd_end:
    65                              ; string terminator
    66  011d  3e00                  ld a,0
    67                              ; add terminator to end of buffer
    68  011f  77                    ld(hl),a
    69                          ; process command from buffer
    70                              ; point to start of buffer
    71  0120  2120f0                ld hl,CMD_BUFFER
    72                              ; load character from buffer
    73  0123  7e                    ld a,(hl)
    74                              ; end of string?
    75  0124  fe00                  cp 0
    76                              ; yes - empty line - go back to prompt
    77  0126  28c8                  jr z,PROMPT
    78                              ; advance the buffer pointer
    79  0128  23                    inc hl
    80  0129  fe72                  cp 'r'
    81  012b  2815                  jr z,_cmd_read
    82  012d  fe77                  cp 'w'
    83  012f  2847                  jr z,_cmd_write
    84  0131  fe78                  cp 'x'
    85  0133  2868                  jr z,_cmd_execute
    86                              ; ':' = load from intel hex format
    87  0135  fe3a                  cp ':'
    88  0137  2879                  jr z,_cmd_load
    89                              ; otherwise error
    90  0139  21b004                ld hl,bad_cmd_msg
    91  013c  cd6000                call puts
    92                              ; loop back to the prompt
    93  013f  c3f000                jp PROMPT
    94                          
    95                          ; COMMANDS
    96                          
    97                          ; READ
    98                          ; read bytes from memory and send hex values to console
    99                          _cmd_read:
   100                              ; load character from buffer
   101  0142  7e                    ld a,(hl)
   102                              ; end of string?
   103  0143  fe00                  cp 0
   104                              ; yes: no address argument, so skip to read row
   105  0145  2808                  jr z, _cmd_read_row
   106                              ; parse first pair of characters
   107  0147  cdf001                call hex_byte_val
   108                              ; load into upper byte of memory pointer
   109  014a  57                    ld d,a
   110                              ; parse second pair of characters
   111  014b  cdf001                call hex_byte_val
   112                              ; load into lower byte of memory pointer
   113  014e  5f                    ld e,a
   114                          _cmd_read_row:
   115                              ; initialise byte counter - each row will have this many bytes
   116  014f  0e10                  ld c, 0x10
   117                              ; print DE content: the read address
   118  0151  7a                    ld a,d
   119  0152  cd4002                call putchar_hex
   120  0155  7b                    ld a,e
   121  0156  cd4002                call putchar_hex
   122                              ; separator between address and data
   123  0159  3e3a                  ld a,':'
   124  015b  cd4000                call putchar
   125  015e  3e20                  ld a,' '
   126  0160  cd4000                call putchar
   127                              ; get a byte
   128                          _cmd_read_byte:
   129  0163  1a                    ld a,(de)
   130                              ; and print it
   131  0164  cd4002                call putchar_hex
   132                              ; add space between bytes
   133  0167  3e20                  ld a,' '
   134  0169  cd4000                call putchar
   135                              ; next address
   136  016c  13                    inc de
   137                              ; reduce byte counter
   138                              ; TODO djnz ?
   139  016d  0d                    dec c
   140                              ; repeat if the counter is not 0
   141  016e  20f3                  jr nz, _cmd_read_byte
   142                              ; otherwise, new line
   143  0170  3e0a                  ld a,ESC_N
   144  0172  cd4000                call putchar
   145                              ; and back to prompt
   146  0175  c3f000                jp PROMPT
   147                          
   148                          ; WRITE
   149                          
   150                          ; write bytes to memory interpreting hex values from console
   151                          _cmd_write:
   152                              ; load character from buffer
   153  0178  7e                    ld a,(hl)
   154                              ; end of string?
   155  0179  fe00                  cp 0
   156                              ; yes: no data
   157  017b  2817                  jr z, _cmd_write_null
   158                              ; parse first pair of characters - address high
   159  017d  cdf001                call hex_byte_val
   160                              ; load into upper byte of memory pointer
   161  0180  57                    ld d,a
   162                              ; parse second pair of characters - address low
   163  0181  cdf001                call hex_byte_val
   164                              ; load into lower byte of memory pointer
   165  0184  5f                    ld e,a
   166                          _cmd_write_data:
   167                              ; load character from buffer
   168  0185  7e                    ld a,(hl)
   169                              ; end of string?
   170  0186  fe00                  cp 0
   171                              ; yes: we're done
   172  0188  2807                  jr z, _cmd_write_end
   173                              ; parse data byte
   174  018a  cdf001                call hex_byte_val
   175                              ; write byte to memory
   176  018d  12                    ld (de),a
   177                              ; advance destination pointer
   178  018e  13                    inc de
   179  018f  18f4                  jr _cmd_write_data
   180                          _cmd_write_end:
   181  0191  c3f000                jp PROMPT
   182                              ; w with no data
   183                          _cmd_write_null:
   184  0194  21c004                ld hl,cmd_w_null_msg
   185  0197  cd6000                call puts
   186                              ; and back to prompt
   187  019a  c3f000                jp PROMPT
   188                          
   189                          ; EXECUTE
   190                          
   191                          ; start executing from given address
   192                          _cmd_execute:
   193                              ; load character from buffer
   194  019d  7e                    ld a,(hl)
   195                              ; end of string?
   196  019e  fe00                  cp 0
   197                              ; yes - no data
   198  01a0  caae01                jp z, _cmd_exec_df
   199                              ; parse first pair of characters - address high
   200  01a3  cdf001                call hex_byte_val
   201                              ; load into upper byte of memory pointer
   202  01a6  57                    ld d,a
   203                              ; parse second pair of characters - address low
   204  01a7  cdf001                call hex_byte_val
   205                              ; load into lower byte of memory pointer
   206  01aa  5f                    ld e,a
   207  01ab  626b                  ld hl,de
   208                              ; execute from address
   209  01ad  e9                    jp (hl)
   210                              ; start executing from default address
   211                          _cmd_exec_df:
   212  01ae  210080                ld hl,RAMSTART
   213                              ; execute from address
   214  01b1  e9                    jp (hl)
   215                          
   216                          ; LOAD
   217                          
   218                          ; load from INTEL HEX - records are read from the buffer
   219                          _cmd_load:
   220                              ; load character from buffer
   221  01b2  7e                    ld a,(hl)
   222                              ; end of string?
   223  01b3  fe00                  cp 0
   224                              ; yes: no data - quit
   225  01b5  cade01                jp z, _cmd_load_end
   226                              ; parse first pair of characters - byte count
   227  01b8  cdf001                call hex_byte_val
   228  01bb  fe00                  cp 0
   229                              ; yes - zero byte count - quit
   230  01bd  cade01                jp z, _cmd_load_end
   231                              ; load byte count into C
   232  01c0  4f                    ld c,a
   233                              ; parse address high
   234  01c1  cdf001                call hex_byte_val
   235                              ; load into upper byte of memory pointer
   236  01c4  57                    ld d,a
   237                              ; parse address low
   238  01c5  cdf001                call hex_byte_val
   239                              ; load into lower byte of memory pointer
   240  01c8  5f                    ld e,a
   241                              ; parse record type
   242  01c9  cdf001                call hex_byte_val
   243                              ; record type zero?
   244  01cc  fe00                  cp 0
   245                              ; no: quit
   246  01ce  c2de01                jp nz, _cmd_load_end
   247                          _cmd_load_data:
   248                              ; load character from buffer
   249  01d1  7e                    ld a,(hl)
   250                              ; end of string?
