    13                          include "asm/marvin.asm"
asm/marvin.asm:
     1                          ; ****************************************************
     2                          ; *  Marvin - a Z80 homebrew monitor program
     3                          ; * (c) Stephen Willcock 2024
     4                          ; * https://github.com/PainfulDiodes
     5                          ; ****************************************************
     6                          
     7                          ; MAIN PROGRAM LOOP
     8                          
     9                          START:
    10                              ; point DE to zero - this is the default address argument for commands
    11  00af  110000                ld de,0x0000
    12                          
    13  00b2  21d303                ld hl,WELCOME_MSG
    14  00b5  cd4e00                call puts
    15                          
    16                          PROMPT:
    17                              ; point HL to the beginning of the input buffer
    18  00b8  2120f0                ld hl,CMD_BUFFER
    19  00bb  3e3e                  ld a,'>'
    20  00bd  cd2e00                call putchar
    21                          
    22                          _get_cmd:
    23                              ; get character from console
    24  00c0  cd0c00                call getchar
    25                              ; echo the character to console
    26  00c3  cd2e00                call putchar
    27                              ; is CR?
    28  00c6  fe0d                  cp ESC_R
    29                              ; yes: skip this
    30  00c8  28f6                  jr z,_get_cmd
    31                              ; is tab?
    32  00ca  fe09                  cp ESC_T
    33                              ; yes: skip this
    34  00cc  28f2                  jr z,_get_cmd
    35                              ; is space?
    36  00ce  fe20                  cp ' '
    37                              ; yes - skip this
    38  00d0  28ee                  jr z,_get_cmd
    39                              ; escape?
    40  00d2  fe1b                  cp ESC_E
    41                              ; yes
    42  00d4  2808                  jr z, _get_cmd_esc
    43                              ; end of line?
    44  00d6  fe0a                  cp ESC_N
    45                              ; yes
    46  00d8  280b                  jr z, _get_cmd_end
    47                              ; no: add character to the buffer
    48  00da  77                    ld(hl),a
    49                              ; move pointer to next buffer location - we're not checking for overrun
    50  00db  23                    inc hl
    51                              ; next character
    52  00dc  18e2                  jr _get_cmd
    53                              ; do escape
    54                          _get_cmd_esc:
    55                              ; new line
    56  00de  3e0a                  ld a,ESC_N
    57  00e0  cd2e00                call putchar
    58                              ; back to prompt
    59  00e3  18d3                  jr PROMPT
    60                          _get_cmd_end:
    61                              ; string terminator
    62  00e5  3e00                  ld a,0
    63                              ; add terminator to end of buffer
    64  00e7  77                    ld(hl),a
    65                          ; process command from buffer
    66                              ; point to start of buffer
    67  00e8  2120f0                ld hl,CMD_BUFFER
    68                              ; load character from buffer
    69  00eb  7e                    ld a,(hl)
    70                              ; end of string?
    71  00ec  fe00                  cp 0
    72                              ; yes - empty line - go back to prompt
    73  00ee  28c8                  jr z,PROMPT
    74                              ; advance the buffer pointer
    75  00f0  23                    inc hl
    76  00f1  fe72                  cp 'r'
    77  00f3  2815                  jr z,_cmd_read
    78  00f5  fe77                  cp 'w'
    79  00f7  2847                  jr z,_cmd_write
    80  00f9  fe78                  cp 'x'
    81  00fb  2868                  jr z,_cmd_execute
    82                              ; ':' = load from intel hex format
    83  00fd  fe3a                  cp ':'
    84  00ff  2879                  jr z,_cmd_load
    85                              ; otherwise error
    86  0101  21fa03                ld hl,BAD_CMD_MSG
    87  0104  cd4e00                call puts
    88                              ; loop back to the prompt
    89  0107  c3b800                jp PROMPT
    90                          
    91                          ; COMMANDS
    92                          
    93                          ; READ
    94                          ; read bytes from memory and send hex values to console
    95                          _cmd_read:
    96                              ; load character from buffer
    97  010a  7e                    ld a,(hl)
    98                              ; end of string?
    99  010b  fe00                  cp 0
   100                              ; yes: no address argument, so skip to read row
   101  010d  2808                  jr z, _cmd_read_row
   102                              ; parse first pair of characters
   103  010f  cda901                call hex_byte_val
   104                              ; load into upper byte of memory pointer
   105  0112  57                    ld d,a
   106                              ; parse second pair of characters
   107  0113  cda901                call hex_byte_val
   108                              ; load into lower byte of memory pointer
   109  0116  5f                    ld e,a
   110                          _cmd_read_row:
   111                              ; initialise byte counter - each row will have this many bytes
   112  0117  0e10                  ld c, 0x10
   113                              ; print DE content: the read address
   114  0119  7a                    ld a,d
   115  011a  cddd01                call putchar_hex
   116  011d  7b                    ld a,e
   117  011e  cddd01                call putchar_hex
   118                              ; separator between address and data
   119  0121  3e3a                  ld a,':'
   120  0123  cd2e00                call putchar
   121  0126  3e20                  ld a,' '
   122  0128  cd2e00                call putchar
   123                              ; get a byte
   124                          _cmd_read_byte:
   125  012b  1a                    ld a,(de)
   126                              ; and print it
   127  012c  cddd01                call putchar_hex
   128                              ; add space between bytes
   129  012f  3e20                  ld a,' '
   130  0131  cd2e00                call putchar
   131                              ; next address
   132  0134  13                    inc de
   133                              ; reduce byte counter
   134                              ; TODO djnz ?
   135  0135  0d                    dec c
   136                              ; repeat if the counter is not 0
   137  0136  20f3                  jr nz, _cmd_read_byte
   138                              ; otherwise, new line
   139  0138  3e0a                  ld a,ESC_N
   140  013a  cd2e00                call putchar
   141                              ; and back to prompt
   142  013d  c3b800                jp PROMPT
   143                          
   144                          ; WRITE
   145                          
   146                          ; write bytes to memory interpreting hex values from console
   147                          _cmd_write:
   148                              ; load character from buffer
   149  0140  7e                    ld a,(hl)
   150                              ; end of string?
   151  0141  fe00                  cp 0
   152                              ; yes: no data
   153  0143  2817                  jr z, _cmd_write_null
   154                              ; parse first pair of characters - address high
   155  0145  cda901                call hex_byte_val
   156                              ; load into upper byte of memory pointer
   157  0148  57                    ld d,a
   158                              ; parse second pair of characters - address low
   159  0149  cda901                call hex_byte_val
   160                              ; load into lower byte of memory pointer
   161  014c  5f                    ld e,a
   162                          _cmd_write_data:
   163                              ; load character from buffer
   164  014d  7e                    ld a,(hl)
   165                              ; end of string?
   166  014e  fe00                  cp 0
   167                              ; yes: we're done
   168  0150  2807                  jr z, _cmd_write_end
   169                              ; parse data byte
   170  0152  cda901                call hex_byte_val
   171                              ; write byte to memory
   172  0155  12                    ld (de),a
   173                              ; advance destination pointer
   174  0156  13                    inc de
   175  0157  18f4                  jr _cmd_write_data
   176                          _cmd_write_end:
   177  0159  c3b800                jp PROMPT
   178                              ; w with no data
   179                          _cmd_write_null:
   180  015c  210704                ld hl,CMD_W_NULL_MSG
   181  015f  cd4e00                call puts
   182                              ; and back to prompt
   183  0162  c3b800                jp PROMPT
   184                          
   185                          ; EXECUTE
   186                          
   187                          ; start executing from given address
   188                          _cmd_execute:
   189                              ; load character from buffer
   190  0165  7e                    ld a,(hl)
   191                              ; end of string?
   192  0166  fe00                  cp 0
   193                              ; yes - no data
   194  0168  ca7601                jp z, _cmd_exec_df
   195                              ; parse first pair of characters - address high
   196  016b  cda901                call hex_byte_val
   197                              ; load into upper byte of memory pointer
   198  016e  57                    ld d,a
   199                              ; parse second pair of characters - address low
   200  016f  cda901                call hex_byte_val
   201                              ; load into lower byte of memory pointer
   202  0172  5f                    ld e,a
   203  0173  626b                  ld hl,de
   204                              ; execute from address
   205  0175  e9                    jp (hl)
   206                              ; start executing from default address
   207                          _cmd_exec_df:
   208  0176  210080                ld hl,RAMSTART
   209                              ; execute from address
   210  0179  e9                    jp (hl)
   211                          
   212                          ; LOAD
   213                          
   214                          ; load from INTEL HEX - records are read from the buffer
   215                          _cmd_load:
   216                              ; load character from buffer
   217  017a  7e                    ld a,(hl)
   218                              ; end of string?
   219  017b  fe00                  cp 0
   220                              ; yes: no data - quit
   221  017d  caa601                jp z, _cmd_load_end
   222                              ; parse first pair of characters - byte count
   223  0180  cda901                call hex_byte_val
   224  0183  fe00                  cp 0
   225                              ; yes - zero byte count - quit
   226  0185  caa601                jp z, _cmd_load_end
   227                              ; load byte count into C
   228  0188  4f                    ld c,a
   229                              ; parse address high
   230  0189  cda901                call hex_byte_val
   231                              ; load into upper byte of memory pointer
   232  018c  57                    ld d,a
   233                              ; parse address low
   234  018d  cda901                call hex_byte_val
   235                              ; load into lower byte of memory pointer
   236  0190  5f                    ld e,a
   237                              ; parse record type
   238  0191  cda901                call hex_byte_val
   239                              ; record type zero?
   240  0194  fe00                  cp 0
   241                              ; no: quit
   242  0196  c2a601                jp nz, _cmd_load_end
   243                          _cmd_load_data:
   244                              ; load character from buffer
   245  0199  7e                    ld a,(hl)
   246                              ; end of string?
   247  019a  fe00                  cp 0
   248                              ; yes: we're done
   249  019c  2808                  jr z, _cmd_load_end
   250                              ; no:
   251                              ; parse data byte
