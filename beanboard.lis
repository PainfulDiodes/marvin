asm/console.asm:
     1                          ; wait for a character and return in A
     2                          getchar:
     3  000c  cd1400                call readchar
     4  000f  fe00                  cp 0
     5  0011  c0                    ret nz
     6  0012  18f8                  jr getchar
     7                          
     8                          IF BEANBOARD
     9                          ; read a character from the console and return in A - return 0 if there is no character
    10                          readchar:
    11  0014  e5                    push hl
    12  0015  2100f0                ld hl,CONSOLE_STATUS
    13  0018  3e02                  ld a,CONSOLE_STATUS_BEANBOARD
    14  001a  a6                    and (hl)
    15  001b  2007                  jr nz,_readchar_beanboard
    16  001d  3e01                  ld a,CONSOLE_STATUS_USB
    17  001f  a6                    and (hl)
    18  0020  2007                  jr nz,_readchar_usb
    19  0022  1808                  jr _readchar_end
    20                          _readchar_beanboard:
    21  0024  cdee02                call key_readchar
    22  0027  1803                  jr _readchar_end
    23                          _readchar_usb:
    24  0029  cd7300                call usb_readchar
    25                          _readchar_end:
    26  002c  e1                    pop hl
    27  002d  c9                    ret
    28                          ELSE
    29                          ; read a character from the console and return in A - return 0 if there is no character
    30                          readchar:
    31                              call usb_readchar
    32                              ret
    33                          ENDIF
    34                          
    35                          IF BEANBOARD
    36                          ; sent character in A to the console
    37                          putchar:
    38  002e  e5                    push hl
    39  002f  c5                    push bc
    40  0030  47                    ld b,a
    41  0031  2100f0                ld hl,CONSOLE_STATUS
    42  0034  3e02                  ld a,CONSOLE_STATUS_BEANBOARD
    43  0036  a6                    and (hl)
    44  0037  2007                  jr nz,_putchar_beanboard
    45  0039  3e01                  ld a,CONSOLE_STATUS_USB
    46  003b  a6                    and (hl)
    47  003c  2008                  jr nz,_putchar_usb
    48  003e  180a                  jr _putchar_end
    49                          _putchar_beanboard:
    50  0040  78                    ld a,b
    51  0041  cd3102                call lcd_putchar
    52  0044  1804                  jr _putchar_end
    53                          _putchar_usb:
    54  0046  78                    ld a,b
    55  0047  cd8400                call usb_putchar
    56                          _putchar_end:
    57  004a  78                    ld a,b
    58  004b  c1                    pop bc
    59  004c  e1                    pop hl
    60  004d  c9                    ret
    61                          ELSE
    62                          ; sent character in A to the console
    63                          putchar:
    64                              push bc
    65                              ld b,a
    66                              call usb_putchar
    67                              ld a,b
    68                              pop bc
    69                              ret
    70                          ENDIF
    71                          
    72                          ; print a zero-terminated string pointed to by hl to the console
    73                          puts:
    74  004e  e5                    push hl
    75                          _puts_loop:
    76                              ; get character from string
    77  004f  7e                    ld a,(hl)
    78                              ; is it zero?
    79  0050  fe00                  cp 0
    80                              ; yes
    81  0052  2807                  jr z, _puts_end
    82                              ; no: send character
    83  0054  cd2e00                call putchar
    84                              ; next character position
    85  0057  23                    inc hl
    86                              ; loop for next character
    87  0058  c34f00                jp _puts_loop
    88                          _puts_end:
    89  005b  e1                    pop hl
    90  005c  c9                    ret
    91                          
    92                          IF BEANBOARD
    93                          ; determine which console should be active - Reset=beanboard, shift-Reset=USB
    94                          beanboard_console_init:
    95                              ; check for modifier keys being held down
    96  005d  cd2e03                call modifierkeys
    97                              ; shift key down?
    98  0060  e601                  and MOD_KEY_SHIFT
    99                              ; yes shift
   100  0062  c26c00                jp nz,_beanboard_console_init_usb
   101                              ; no shift
   102  0065  3e02                  ld a,CONSOLE_STATUS_BEANBOARD
   103  0067  2100f0                ld hl,CONSOLE_STATUS
   104  006a  77                    ld (hl),a
   105  006b  c9                    ret
   106                          _beanboard_console_init_usb:
   107  006c  3e01                  ld a,CONSOLE_STATUS_USB
   108  006e  2100f0                ld hl,CONSOLE_STATUS
   109  0071  77                    ld (hl),a
   110  0072  c9                    ret
   111                          ENDIF
