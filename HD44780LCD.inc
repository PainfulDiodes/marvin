; LCD commands
LCD_CLEAR_DISPLAY equ $01
LCD_RETURN_HOME equ $02
LCD_ENTRY_MODE_SET equ $04
LCD_DISPLAY_ON_OFF_CONTROL equ $08
LCD_CURSOR_DISPLAY_SHIFT equ $10
LCD_FUNCTION_SET equ $20
LCD_SET_CGRAM_ADDR equ $40
LCD_SET_DDRAM_ADDR equ $80

; LCD_ENTRY_MODE_SET options
LCD_ENTRY_INC equ $02 ; left
LCD_ENTRY_DEC equ $00 ; right
LCD_ENTRY_SHIFT equ $01
LCD_ENTRY_NO_SHIFT equ $00

; LCD_DISPLAY_ON_OFF_CONTROL options
LCD_DISPLAY_ON equ $04
LCD_DISPLAY_OFF equ $00
LCD_CURSOR_ON equ $02
LCD_CURSOR_OFF equ $00
LCD_BLINK_ON equ $01
LCD_BLINK_OFF equ $00

; LCD_CURSOR_DISPLAY_SHIFT options
LCD_SHIFT_DISPLAY equ $08
LCD_SHIFT_CURSOR equ $00
LCD_SHIFT_RIGHT equ $04
LCD_SHIFT_LEFT equ $00

; LCD_FUNCTION_SET options
LCD_DATA_LEN_8 equ $10
LCD_DATA_LEN_4 equ $00
LCD_DISP_LINES_2 equ $08
LCD_DISP_LINES_1 equ $00
LCD_FONT_10 equ $04
LCD_FONT_8 equ $00

LCD_LINE_LEN equ $14
LCD_NUM_LINES equ 4
LCD_BUFFER_LEN equ LCD_LINE_LEN*LCD_NUM_LINES

; LCD_SET_DDRAM_ADDR options
LCD_LINE_0_ADDR equ $00
LCD_LINE_1_ADDR equ $40
LCD_LINE_2_ADDR equ $00+LCD_LINE_LEN
LCD_LINE_3_ADDR equ $40+LCD_LINE_LEN
LCD_EOL_0 equ $00+LCD_LINE_LEN-1
LCD_EOL_1 equ $40+LCD_LINE_LEN-1
LCD_EOL_2 equ $00+LCD_LINE_LEN*2-1
LCD_EOL_3 equ $40+LCD_LINE_LEN*2-1
